{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "nuxt-ui": {
      "type": "remote",
      "url": "https://ui.nuxt.com/mcp",
      "enabled": true
    },
    "nuxt": {
      "url": "https://mcp.nuxt.com/sse",
      "enabled": true,
      "type": "remote"
    },
    "chrome-devtools": {
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "type": "local"
    }
  }
}
