// Static tasks configuration.
//
// Example:
[
  {
    "label": "LazyGit",
    "command": "lazygit",
    "use_new_terminal": true,
    "reveal_target": "center",
    "hide": "always"
  },
  {
    "label": "Create New Release",
    "command": "./release.sh",
    "use_new_terminal": false,
    "hide": "never",
    "args": ["$VERSION"]
  }
]
