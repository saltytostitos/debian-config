{
  "languages": {
    "Markdown": {
      "format_on_save": "off",
      "indent_guides": {
        "background_coloring": "disabled",
        "coloring": "indent_aware"
      },
      "auto_indent": true
    }
  },
  "hard_tabs": false,
  "minimap": {
    "show": "never"
  },
  "format_on_save": "on",
  "show_wrap_guides": true,
  "rounded_selection": true,
  "selection_highlight": true,
  "cursor_shape": "bar",
  "git": {
    "hunk_style": "staged_hollow",
    "branch_picker": {
      "show_author_name": true
    },
    "inline_blame": {
      "show_commit_summary": true
    },
    "git_gutter": "tracked_files"
  },
  "outline_panel": {
    "file_icons": true,
    "default_width": 250.0,
    "button": true
  },
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": false
  },
  "search": {
    "button": false
  },
  "debugger": {
    "button": false
  },
  "use_system_window_tabs": false,
  "bottom_dock_layout": "contained",
  "preview_tabs": {
    "enable_preview_from_code_navigation": false,
    "enable_preview_from_file_finder": false,
    "enabled": true
  },
  "title_bar": {
    "show_menus": false,
    "show_sign_in": true,
    "show_user_picture": true,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_branch_name": true,
    "show_branch_icon": false
  },
  "agent_servers": {
    "OpenCode": {
      "command": "opencode",
      "args": ["acp"],
      "env": {}
    }
  },
  "vim_mode": true,
  "language_models": {
    "openai_compatible": {
      "GLM Coder": {
        "api_url": "https://api.z.ai/api/coding/paas/v4",
        "available_models": [
          {
            "name": "glm-4.6",
            "max_tokens": 200000,
            "max_output_tokens": 128000,
            "max_completion_tokens": 128000,
            "capabilities": {
              "tools": true,
              "images": true,
              "parallel_tool_calls": true,
              "prompt_cache_key": true
            }
          }
        ]
      }
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "hover_popover_enabled": true,
  "hover_popover_delay": 0,
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "context_servers": {
    "nuxt": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["mcp-remote", "https://mcp.nuxt.com/sse"]
    },
    "chrome-devtools": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "chrome-devtools-mcp@latest"]
    },
    "nuxt-ui": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["mcp-remote", "https://ui.nuxt.com/mcp"],
      "env": {}
    },
    "browser-tools-context-server": {
      "source": "extension",
      "enabled": true,
      "settings": {}
    },
    "mcp-server-context7": {
      "enabled": true,
      "source": "extension",
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "linked_edits": true,
  "git_panel": {
    "sort_by_path": false,
    "status_style": "icon",
    "button": false,
    "dock": "right"
  },
  // Remove clutter from tab bar so only tabs show
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  // Remove the toolbar above the editor to remove clutter
  "toolbar": {
    "code_actions": false,
    "agent_review": false,
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },

  "tabs": {
    // Status is color coded
    "git_status": true,
    "show_diagnostics": "errors",
    "file_icons": true
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "icon_theme": "Material Icon Theme",
  "agent": {
    "button": true,
    "enable_feedback": true,

    "always_allow_tool_actions": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_model": {
      "provider": "GLM Coder",
      "model": "glm-4.6"
    },
    "play_sound_when_agent_done": true,
    "default_profile": "ask",
    "dock": "left"
  },
  "current_line_highlight": "gutter",
  // Typing a closing bracket will type over it and not add additional closing brackets.
  "always_treat_brackets_as_autoclosed": true,
  "use_autoclose": true,
  "theme": "SynthWave 84 Dark",
  "buffer_line_height": "comfortable",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "Monaspace Radon ExtraLight",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "experimental.theme_overrides": {
    "hint": "#604882"
  },
  "terminal": {
    "button": true,
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "autosave": "off",
  "inlay_hints": {
    "enabled": true
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.85,
    "border_size": 0.7
  },
  "soft_wrap": "editor_width",
  "show_whitespaces": "all",
  "project_panel": {
    "starts_open": true,
    "git_status": true,
    "folder_icons": false,
    "file_icons": true,
    "button": false,
    "dock": "right",
    "entry_spacing": "standard",
    "hide_root": true
  },
  "auto_update": true,
  "diagnostics": {
    "button": true,
    "inline": {
      "enabled": true
    },
    "cargo": null
  },
  "journal": {
    "hour_format": "hour24"
  }
}
